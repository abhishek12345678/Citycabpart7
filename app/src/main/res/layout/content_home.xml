<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Model.HomeActivity">
    



        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Model.Welcome" />

        <android.support.v7.widget.Cardview

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentButton="true"
            app:cardElevation="10dp"
            >

       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgExpandable"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

           <Button
               android:layout_below="@id/imgExpandable"
               android:id="@+id/btnPickupRequest"
               android:text="PICKUP REQUEST"
               android:background=""
               android:textColor="#000000"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

    </RelativeLayout>

 </android.support.v7.widget.Cardview>

</RelativeLayout>

